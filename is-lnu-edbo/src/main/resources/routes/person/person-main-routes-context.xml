<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
    ">
 
    <routeContext id="personRoutes" xmlns="http://camel.apache.org/schema/spring">
        <route id="person-create-route">
            <from uri="direct:person-create"/>
            <log message="Starting integration process for person-post" />
            <bean ref="personResourceCreateEdeboConverter" method="convert"/>
            <bean ref="edeboService" method="execute"/>
            <log message="Creating new person: ${body}" />
            <bean ref="personEdeboCreateConverter" method="convert" />
            <bean ref="personResourceConverter" method="convert" />
            <bean ref="personService" method="updateEntity" />
        </route>
    </routeContext>
 
</beans>