<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans     
        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-3.2.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd">

	<bean id="entityNotFoundExceptionHandler" class="org.lnu.is.web.rest.handler.entity.EntityNotFoundExceptionHandler" />
	<bean id="messageNotReadableExceptionHandler" class="org.lnu.is.web.rest.handler.request.MessageNotReadableExceptionHandler" />
	<bean id="messageArgumentNotValidExceptionHandler" class="org.lnu.is.web.rest.handler.request.MethodArgumentNotValidExceptionHandler" />
	<bean id="accessDeniedExceptionHandler" class="org.lnu.is.web.rest.handler.access.AccessDeniedExceptionHandler" />
	<bean id="noGroupsForUserExceptionHandler" class="org.lnu.is.web.rest.handler.access.NoGroupForUserExceptionHandler" />
	
</beans>